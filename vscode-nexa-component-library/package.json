{
    "name": "nexa-component-library",
    "displayName": "Nexa Component Library",
    "description": "Galerie de composants .nx prêts à l'emploi avec prévisualisation en temps réel",
    "version": "1.0.0",
    "publisher": "nexa-framework",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other",
        "Snippets",
        "Visualization"
    ],
    "keywords": [
        "nexa",
        "components",
        "ui",
        "library",
        "drag-drop",
        "themes"
    ],
    "activationEvents": [
        "onLanguage:nx",
        "workspaceContains:**/*.nx",
        "onCommand:nexa.componentLibrary.open"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "nexa.componentLibrary.open",
                "title": "Ouvrir la bibliothèque de composants",
                "category": "Nexa",
                "icon": "$(library)"
            },
            {
                "command": "nexa.componentLibrary.insertComponent",
                "title": "Insérer un composant",
                "category": "Nexa"
            },
            {
                "command": "nexa.componentLibrary.previewComponent",
                "title": "Prévisualiser le composant",
                "category": "Nexa"
            },
            {
                "command": "nexa.componentLibrary.createComponent",
                "title": "Créer un nouveau composant",
                "category": "Nexa"
            },
            {
                "command": "nexa.componentLibrary.refreshLibrary",
                "title": "Actualiser la bibliothèque",
                "category": "Nexa",
                "icon": "$(refresh)"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "nexaComponentLibrary",
                    "name": "Composants Nexa",
                    "when": "nexaProject"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "nexa.componentLibrary.refreshLibrary",
                    "when": "view == nexaComponentLibrary",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "nexa.componentLibrary.insertComponent",
                    "when": "view == nexaComponentLibrary && viewItem == component",
                    "group": "inline"
                },
                {
                    "command": "nexa.componentLibrary.previewComponent",
                    "when": "view == nexaComponentLibrary && viewItem == component",
                    "group": "inline"
                }
            ],
            "commandPalette": [
                {
                    "command": "nexa.componentLibrary.open",
                    "when": "nexaProject"
                },
                {
                    "command": "nexa.componentLibrary.createComponent",
                    "when": "nexaProject"
                }
            ],
            "editor/context": [
                {
                    "command": "nexa.componentLibrary.insertComponent",
                    "when": "resourceExtname == .nx",
                    "group": "nexa"
                }
            ]
        },
        "configuration": {
            "title": "Nexa Component Library",
            "properties": {
                "nexa.componentLibrary.libraryPath": {
                    "type": "string",
                    "default": "workspace/interface/components",
                    "description": "Chemin vers la bibliothèque de composants"
                },
                "nexa.componentLibrary.autoPreview": {
                    "type": "boolean",
                    "default": true,
                    "description": "Prévisualisation automatique des composants"
                },
                "nexa.componentLibrary.dragDropEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Activer le drag & drop de composants"
                },
                "nexa.componentLibrary.defaultTheme": {
                    "type": "string",
                    "default": "default",
                    "description": "Thème par défaut pour les composants"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "marked": "^4.3.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nexa-framework/vscode-extensions.git"
    },
    "license": "MIT"
}