{
  "name": "nexa-graphql-studio",
  "displayName": "Nexa GraphQL Studio",
  "description": "Éditeur de schémas GraphQL avec autocomplétion, testeur de requêtes et génération de resolvers",
  "version": "1.0.0",
  "publisher": "nexacorps",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "nexa",
    "graphql",
    "schema",
    "resolver",
    "query",
    "mutation"
  ],
  "activationEvents": [
    "onLanguage:graphql",
    "onCommand:nexa.graphql.openStudio",
    "onCommand:nexa.graphql.generateResolver",
    "onCommand:nexa.graphql.validateSchema",
    "onCommand:nexa.graphql.testQuery"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "graphql",
        "aliases": ["GraphQL", "graphql"],
        "extensions": [".graphql", ".gql"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphql",
        "scopeName": "source.graphql",
        "path": "./syntaxes/graphql.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "nexa.graphql.openStudio",
        "title": "Ouvrir GraphQL Studio",
        "category": "Nexa GraphQL",
        "icon": "$(graph)"
      },
      {
        "command": "nexa.graphql.generateResolver",
        "title": "Générer un Resolver",
        "category": "Nexa GraphQL",
        "icon": "$(add)"
      },
      {
        "command": "nexa.graphql.validateSchema",
        "title": "Valider le Schéma",
        "category": "Nexa GraphQL",
        "icon": "$(check)"
      },
      {
        "command": "nexa.graphql.testQuery",
        "title": "Tester une Requête",
        "category": "Nexa GraphQL",
        "icon": "$(play)"
      },
      {
        "command": "nexa.graphql.generateDocs",
        "title": "Générer la Documentation",
        "category": "Nexa GraphQL",
        "icon": "$(book)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "nexa.graphql.generateResolver",
          "when": "resourceExtname == .graphql",
          "group": "nexa@1"
        },
        {
          "command": "nexa.graphql.validateSchema",
          "when": "resourceExtname == .graphql",
          "group": "nexa@2"
        }
      ],
      "editor/context": [
        {
          "command": "nexa.graphql.testQuery",
          "when": "resourceExtname == .graphql",
          "group": "nexa@1"
        }
      ],
      "commandPalette": [
        {
          "command": "nexa.graphql.openStudio",
          "when": "workspaceHasNexaProject"
        },
        {
          "command": "nexa.graphql.generateResolver",
          "when": "workspaceHasNexaProject"
        },
        {
          "command": "nexa.graphql.validateSchema",
          "when": "workspaceHasNexaProject"
        }
      ]
    },
    "snippets": [
      {
        "language": "graphql",
        "path": "./snippets/graphql.json"
      }
    ],
    "configuration": {
      "title": "Nexa GraphQL Studio",
      "properties": {
        "nexa.graphql.endpoint": {
          "type": "string",
          "default": "http://localhost:8000/graphql",
          "description": "URL de l'endpoint GraphQL"
        },
        "nexa.graphql.autoValidate": {
          "type": "boolean",
          "default": true,
          "description": "Validation automatique des schémas"
        },
        "nexa.graphql.introspection": {
          "type": "boolean",
          "default": true,
          "description": "Activer l'introspection GraphQL"
        },
        "nexa.graphql.resolverPath": {
          "type": "string",
          "default": "workspace/handlers/graphql",
          "description": "Chemin vers les resolvers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "graphql": "^16.8.1",
    "graphql-language-service": "^5.2.0",
    "@graphql-tools/schema": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nexacorps/nexa-graphql-studio"
  },
  "license": "MIT"
}