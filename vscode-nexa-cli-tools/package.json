{
  "name": "nexa-cli-tools",
  "displayName": "Nexa CLI Tools",
  "description": "Intégration des commandes Nexa directement dans VS Code avec terminal intégré et autocomplétion",
  "version": "1.0.0",
  "publisher": "nexacorps",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Debuggers"
  ],
  "keywords": [
    "nexa",
    "cli",
    "framework",
    "php",
    "terminal",
    "commands"
  ],
  "activationEvents": [
    "onCommand:nexa.generateHandler",
    "onCommand:nexa.generateEntity",
    "onCommand:nexa.generateMiddleware",
    "onCommand:nexa.runMigration",
    "onCommand:nexa.runSeed",
    "onCommand:nexa.openTerminal"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nexa.generateHandler",
        "title": "Générer un Handler",
        "category": "Nexa"
      },
      {
        "command": "nexa.generateEntity",
        "title": "Générer une Entité",
        "category": "Nexa"
      },
      {
        "command": "nexa.generateMiddleware",
        "title": "Générer un Middleware",
        "category": "Nexa"
      },
      {
        "command": "nexa.runMigration",
        "title": "Exécuter les Migrations",
        "category": "Nexa"
      },
      {
        "command": "nexa.runSeed",
        "title": "Exécuter les Seeds",
        "category": "Nexa"
      },
      {
        "command": "nexa.openTerminal",
        "title": "Ouvrir Terminal Nexa",
        "category": "Nexa"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "nexa.generateHandler",
          "when": "explorerResourceIsFolder",
          "group": "nexa@1"
        },
        {
          "command": "nexa.generateEntity",
          "when": "explorerResourceIsFolder",
          "group": "nexa@2"
        },
        {
          "command": "nexa.generateMiddleware",
          "when": "explorerResourceIsFolder",
          "group": "nexa@3"
        }
      ],
      "commandPalette": [
        {
          "command": "nexa.generateHandler",
          "when": "workspaceHasNexaProject"
        },
        {
          "command": "nexa.generateEntity",
          "when": "workspaceHasNexaProject"
        },
        {
          "command": "nexa.generateMiddleware",
          "when": "workspaceHasNexaProject"
        },
        {
          "command": "nexa.runMigration",
          "when": "workspaceHasNexaProject"
        },
        {
          "command": "nexa.runSeed",
          "when": "workspaceHasNexaProject"
        }
      ]
    },
    "configuration": {
      "title": "Nexa CLI Tools",
      "properties": {
        "nexa.cliPath": {
          "type": "string",
          "default": "./nexa",
          "description": "Chemin vers l'exécutable Nexa CLI"
        },
        "nexa.autoComplete": {
          "type": "boolean",
          "default": true,
          "description": "Activer l'autocomplétion des commandes Nexa"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nexacorps/nexa-cli-tools"
  },
  "license": "MIT"
}